<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarEndereco">

    <TextView
        android:id="@+id/titulo_cadastro_endereco"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/titulo_cadastro_endereco"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/cadastro_endereco_casa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cadastro_endereco_casa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/b_cadastro_endereco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_cadastro_endereco" />

    <Button
        android:id="@+id/b_cadastro_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="356dp"
        android:text="@string/botao_cadastro_endereco"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cadastro_endereco_casa"
        app:layout_constraintTop_toBottomOf="@+id/cadastro_endereco_casa" />
</android.support.constraint.ConstraintLayout>